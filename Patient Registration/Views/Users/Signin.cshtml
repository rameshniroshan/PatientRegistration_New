        $("#btnLogin").click(function () {            
           return ValidationControls();
        });

        function ValidationControls() {
            var status = true;
            var message = "Please Enter User Name and Password.";           
            if ($("#UserName").val() == "") {
                message = "Please Enter User Name.";
                status = false;
            }
            else if ($("#Password").val() == "") {
                message = "Please Enter Password.";
                status = false;
            }
            if (status == false) {
                $("#divError").html(message);
                $("#divError").addClass("alert alert-danger");
            }
           
            return status;
        }
    // });
</script>
