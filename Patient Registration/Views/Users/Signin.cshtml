                <label class="control-label">User Name:</label>
                <input asp-for="UserName" class="form-control mb-3" placeholder="User Name" />
            </div>
           
            <div class="form-group">
                <label class="control-label">Password:</label>                
                <input asp-for="Password" class="form-control mb-4" placeholder="Password" />
            </div>
           
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success" id="btnLogin" name="btnLogin" />
