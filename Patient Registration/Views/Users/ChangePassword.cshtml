@model Patient_Registration.Models.Call_Users

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_LayoutLogged.cshtml";
}

<div class="loyaltyEditback col-md-6 ooffset-md-2 changepwdsection">
    <h2 class="text-center1 mb-4">Change Password</h2>
    <div class="border border-warning p-4 rounded shadow-sm">
        <div class="errorLabel" id="divError"></div>
        <form asp-action="ChangePassword" method="post">
            <div class="form-group">
                <label class="control-label">Old Password:</label>
                <input type="password" name="oldpwd" class="form-control mb-3" placeholder="Old Password" />
            </div>

            <div class="form-group">
                <label class="control-label">New Password:</label>
                <input type="password" name="newpwd" class="form-control mb-4" placeholder="New Password" />
            </div>

            <div class="form-group">
                <label class="control-label">Confirm New Password:</label>
                <input type="password" name="confirmnewpwd" class="form-control mb-4" placeholder="Confirm New Password" />
            </div>

            <div class="form-group">
                <input type="submit" value="Change Password" class="btn btn-success btnchangepassword" id="btnChangePassword" name="btnChangePassword" />
                <input class="btn btn-warning btnClear" type="button" value="Clear" />
            </div>
        </form>
    </div>
</div>