@model Patient_Registration.Models.Call_LoyaltyPrograms

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutLogged.cshtml";
}


<h2 class="loyaltyEditback">Add Loyalty Programs</h2>
<hr class="loyaltyEditback" />
<div class="border border-warning p-4 rounded-3 loyaltyEditback col-md-6">
    <!-- Error Label -->
    <div class="errorLabel" id="divError"></div>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="LoyaltyName" class="form-label fw-bold"></label>
            <input asp-for="LoyaltyName" class="form-control mb-3" />
            <span asp-validation-for="LoyaltyName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LoyaltyDescription" class="form-label fw-bold"></label>
            <input asp-for="LoyaltyDescription" class="form-control mb-3" />
            <span asp-validation-for="LoyaltyDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Active" class="form-label fw-bold"></label>
            <select name="Active" id="AddLoyaltyActive" class="form-control" dropzone="true">
                <option value="true">True</option>
                <option value="false">False</option>
            </select>
            <span asp-validation-for="Active" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-success mt-4" />
        </div>
    </form>
</div>

    <div class="row">
    <div class="col-md-4">
       
    </div>
</div>

<div>
