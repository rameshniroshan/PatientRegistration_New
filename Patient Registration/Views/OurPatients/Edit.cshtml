                    <input class="form-control" name="GuardianName" id="GuardianName" value=@Model.GuardianName />
                </div>
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.GuardianID)*</label>
                    <input class="form-control" name="GuardianID" id="GuardianID" value=@Model.GuardianID />
                </div>
            </div>
            <!-- Row 8: Loyalty No and Member ID -->
            <div class="row mb-3">
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.LoyaltyNo)</label>
                    <input class="form-control" name="LoyaltyNo" id="LoyaltyNo" value=@Model.LoyaltyNo />
                </div>
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.MemberID)</label>
                    <input class="form-control" name="MemberID" id="MemberID" value=@Model.MemberID />
                </div>
            </div>
            <!-- Row 9: Email and Special Conditions -->
            <div class="row mb-3">
                <div class="col-sm-6">
                    <label class="control-label marginlr-10 fw-bold">@Html.DisplayNameFor(model => model.Email)</label>
                    <input class="form-control" name="Email" id="Email" value=@Model.Email />
                </div>
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.SpecialConditions)</label>
                    <select id="AddPatientSpecialConditions" name="SpecialConditions" class="form-control" dropzone="true">
                        <option value="">Select Option</option>

                        @if (Model.SpecialConditions == "Disable")
                        {
                            <option selected value="Disable">Disable</option>
                            <option value="VIP">VIP</option>
                            <option value="Staff">Staff</option>
                            <option value="Consultant">Consultant</option>
                        }
                        else if (Model.SpecialConditions == "VIP")
                        {
                            <option value="Disable">Disable</option>
                            <option selected value="VIP">VIP</option>
                            <option value="Staff">Staff</option>
                            <option value="Consultant">Consultant</option>
                        }
                        else if (Model.SpecialConditions == "Staff")
                        {
                            <option value="Disable">Disable</option>
                            <option value="VIP">VIP</option>
                            <option selected value="Staff">Staff</option>
                            <option value="Consultant">Consultant</option>
                        }
                        else if (Model.SpecialConditions == "Consultant")
                        {
                            <option value="Disable">Disable</option>
                            <option value="VIP">VIP</option>
                            <option value="Staff">Staff</option>
                            <option selected value="Consultant">Consultant</option>
                        }
                       
                    </select>
                </div>
            </div>
            <!-- Row 10: Social Id and loyalprogramid -->
            <div class="row mb-3">
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.SocialId)</label>
                    <input class="form-control" name="SocialId" id="SocialId" value=@Model.SocialId />
                </div>
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.LoyaltyProgramId)</label>                    
                    <select id="AddPatientLoyaltyProgramId" name="LoyaltyProgramId" class="form-control" dropzone="true">
                        <option value="">Select Option</option>

                        @if (Model.LoyaltyProgramId == "1")
                        {
                            <option selected value="1">Nawaloka Family Care</option>
                            <option value="2">MIRA Cosmetic</option>
                            <option value="3">Wellness Center</option>                           
                        }
                        else if (Model.LoyaltyProgramId == "2")
                        {
                            <option value="1">Nawaloka Family Care</option>
                            <option selected value="2">MIRA Cosmetic</option>
                            <option value="3">Wellness Center</option>
                        }
                        else 
                        {
                            <option value="1">Nawaloka Family Care</option>
                            <option value="2">MIRA Cosmetic</option>
                            <option value="3">Wellness Center</option>
                        }
                       

                    </select>
                </div>
            </div>
            <!-- Row 11:  Active -->
            <div class="row mb-3">
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Active)</label>
                    <select name="Active" id="Active" class="form-control" dropzone="true">
                        @if (Model.Active == true)
                        {
                            <option selected value="True">True</option>
                            <option value="False">False</option>
                        }
                        else
                        {
                            <option value="True">True</option>
                            <option selected value="False">False</option>
                        }
                    </select>
                </div>
                <div class="col-sm-6">
                    
                </div>
            </div>
            <!-- Submission Button -->
            <div class="form-group mt-4">
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
    </form>
    </div>
    <a class="btn btn-warning mb-4 mt-4 loyaltyEditback btnbacktoList" asp-action="Create">Back to List</a>
</div>
