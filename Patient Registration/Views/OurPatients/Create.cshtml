@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Mvc;
@using Microsoft.AspNetCore.Mvc.RazorPages;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model IEnumerable<Patient_Registration.Models.Call_Patients>

@{
    ViewData["Title"] = "List and Create Patient";
    Layout = "~/Views/Shared/_LayoutLogged.cshtml";
}

@await Html.PartialAsync("List", Model)

<div class="container listpatientpaddingtop">
    <h2 id="createPatientHeading">Create Patients</h2>
    <hr>
    <div class="border border-warning p-4 rounded-3">
        <!-- Error Label -->
        @{
            var sessionValue = HttpContextAccessor.HttpContext.Session.GetString("patientCreated");
            if (sessionValue == "true")
            {
                <div class="alert alert-success" id="divError">Patient SuccessFully Added</div>
                HttpContextAccessor.HttpContext.Session.SetString("patientCreated","");
            }else{
                        <div class="errorLabel" id="divError"></div>
            }
        
        }
               
        <form  asp-action="Create" id="frmCreatePatient">
            <!-- Row 1: Mobile No and NIC -->
            <div class="row mb-3">
                <div class="col-sm-6">
                    <label for="AddPatientMobileNo" class="form-label fw-bold">@Html.DisplayNameFor(model => model.MobileNo)*</label>
                    <input type="text" class="form-control" name="MobileNo" id="AddPatientMobileNo" placeholder="Mobile No" maxlength=13>
                </div>
                <div class="col-sm-6">
                    <label for="AddPatientNIC" class="form-label fw-bold">@Html.DisplayNameFor(model => model.NIC)</label>
                    <input type="text" class="form-control" name="NIC" id="AddPatientNIC" placeholder="NIC">
                </div>
            </div>
            <!-- Row 2: Passport No and Designation -->
            <div class="row mb-3">
                <div class="col-sm-6">
                    <label for="AddPatientPassportNo" class="form-label fw-bold">@Html.DisplayNameFor(model => model.PassportNo)</label>
                    <input type="text" class="form-control" name="PassportNo" id="AddPatientPassportNo" placeholder="Passport No">
                </div>
                <div class="col-sm-6">
                    <label for="AddPatientDesignation" class="form-label fw-bold">@Html.DisplayNameFor(model => model.Designation)*</label>
                    <select class="form-control" name="Designation" id="AddPatientDesignation">
                        <option value="">Select Option</option>
                        <option value="Mr">Mr</option>
                        <option value="Ms">Ms</option>
                        <option value="Mrs">Mrs</option>
                        <option value="Baby">Baby</option>
                        <option value="Rev">Rev</option>
                        <option value="Master">Master</option>
                        <option value="Dr">Dr</option>
                        <option value="Prof">Prof</option>
                    </select>
                </div>
            </div>
            <!-- Row 3: Name and Surname -->
            <div class="row mb-3">
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Name)*</label>
                    <input class="form-control" name="Name" id="AddPatientName" placeholder="Name" />
                </div>
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Surname)</label>
                    <input class="form-control" name="Surname" id="AddPatientSurname" placeholder="Surname" />
                </div>
            </div>
            <!-- Row 4: DOB and Gender -->
            <div class="row mb-3">
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.DOB)*</label>
                    <input class="form-control" name="DOB" id="AddPatientDOB" placeholder="Date Of Birth" />
                </div>
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Gender)*</label>
                    <select id="AddPatientGender" name="Gender" class="form-control">
                        <option value="">Select Option</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>
            </div>
            <!-- Row 5: Resident Area and Nationality -->
            <div class="row mb-3">
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.ResidentArea)</label>
                    <input class="form-control" name="ResidentArea" id="AddPatientResidentArea" placeholder="Resident Area" />
                </div>
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Nationality)</label>
                    <input class="form-control" name="Nationality" id="AddPatientNationality" placeholder="Nationality" />
                </div>
            </div>
            <!-- Row 6: Religion and Relationship with Guardian -->
            <div class="row mb-3">
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Religion)*</label>
                    <select id="AddPatientReligion" name="Religion" class="form-control" dropzone="true">
                        <option value="">Select Option</option>
                        <option value="Buddhist">Buddhist</option>
                        <option value="Catholic">Catholic</option>
                        <option value="Islam">Islam</option>
                        <option value="Hindu">Hindu</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.RelationGuardian)*</label>
                    <select id="AddPatientRelationGuardian" name="RelationGuardian" class="form-control" dropzone="true" onchange="RelatedGurdianOnChange()">
                        <option value="">Select Option</option>
                        <option value="Self">Self</option>
                        <option value="Mother">Mother</option>
                        <option value="Father">Father</option>
                        <option value="Son">Son</option>
                        <option value="Daughter">Daughter</option>
                        <option value="Next or Kind">Next Of Kin</option>
                        <option value="Friend">Friend</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>
            <!-- Row 7: Guardian Name and Guardian ID -->
