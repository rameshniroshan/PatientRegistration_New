                    <input class="form-control" name="GuardianID" id="AddPatientGuardianID" placeholder="Guardian ID" />
                </div>
            </div>
            <!-- Row 8: Loyalty No and Member ID -->
            <div class="row mb-3">
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.LoyaltyNo)</label>
                    <input class="form-control" name="LoyaltyNo" id="AddPatientLoyaltyNo" placeholder="Loyalty No" />
                </div>
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.MemberID)</label>
                    <input class="form-control" name="MemberID" id="AddPatientMemberID" placeholder="Member ID" />
                </div>
            </div>
            <!-- Row 9: Email and Special Conditions -->
            <div class="row mb-3">
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Email)</label>
                    <input class="form-control" name="Email" id="AddPatientEmail" placeholder="Email" />
                </div>
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.SpecialConditions)</label>
                    <select id="AddPatientSpecialConditions" name="SpecialConditions" class="form-control" dropzone="true">
                        <option value="">Select Option</option>
                        <option value="Disable">Disable</option>
                        <option value="VIP">VIP</option>
                        <option value="Staff">Staff</option>
                        <option value="Consultant">Consultant</option>
                    </select>
                </div>
            </div>
            <!-- Row 10: Social Id and LoyaltyProgramId -->
            <div class="row mb-3">
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.SocialId)</label>
                    <input class="form-control" name="SocialId" id="AddPatientSocialId" placeholder="Social Id" />
                </div>
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.LoyaltyProgramId)</label>
                   
                    <select name="LoyaltyProgramId" id="AddPatientLoyaltyProgramme" class="form-control" dropzone="true">
                        <option value="">Select option</option>
                        @section loadLoyaltyscripts {
                        <script type="text/javascript">
                                    //load all Loyalty Programme
                                    var oLoyaltyProgramme = "";
                                    
                                    $.ajax({
                                        type: "POST",
                                        url: "/OurPatients/GetAllLoyaltyProgramme",
                                        contentType: "application/json; charset=utf-8",
                                        data: "{}",
                                        dataType: "json",
                                        async: true,
                                        cache: false,
                                        success: function (data) {                                    
                                            oLoyaltyProgramme = data.loyaltyProgramme;

                                        oLoyaltyProgramme.forEach(function (item) {
                                            //alert(item.LoyaltyName);
                                            var selectBox = $("#AddPatientLoyaltyProgramme");
                                            var option = "<option value='" + item.Id + "'>" + item.LoyaltyName + "</option>";
                                            selectBox.append(option);
                                        });
                                        },
                                        failure: function (msg) {
                                            alert(msg.d);
                                        },
                                        error: function (error, errortype, exceptionobject) {
                                            var err = eval("(" + error.responseText + ")");
                                            alert(err.Message);
                                        }
                                    });
                        </script>
                        }
                        
                    </select>
                </div>
            </div>
            <!-- Row 10: Active -->
            <div class="row mb-3">
                <div class="col-sm-6">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Active)</label>
                    <select name="Active" id="AddPatientActive" class="form-control" dropzone="true">
                        <option value="True">True</option>
                        <option value="False">False</option>
                    </select>
                </div>
                <div class="col-sm-6">
                    
                </div>
            </div>

            <!-- Submission Button -->
            <div class="form-group mt-4">
                <input type="submit" value="Create" id="btnSubmitPatient" class="btn btn-success" />
                <input class="btn btn-warning btnClear listDetailsbtn" id="btnCreatePatientClear" type="button" value="Clear" />
            </div>

        </form>
        </div>
        <div style="margin-top:15px;margin-bottom:15px">&nbsp;</div>
        </div>

